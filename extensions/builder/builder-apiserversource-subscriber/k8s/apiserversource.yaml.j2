apiVersion: sources.knative.dev/v1
kind: ApiServerSource
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
spec:
  serviceAccountName: {{ app_name }}
  mode: Resource
  resources:
    - apiVersion: serving.knative.dev/v1
      kind: Service
    - apiVersion: apps/v1
      kind: Deployment
    - apiVersion: krules.dev/v1alpha1
      kind: ConfigurationProvider
  sink:
    ref:
      apiVersion: v1
      kind: Service
      name: {{ app_name }}
