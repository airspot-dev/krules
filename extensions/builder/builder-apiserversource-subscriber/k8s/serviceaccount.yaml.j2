apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
rules:
- apiGroups:
    - serving.knative.dev
  resources:
    - services
  verbs:
    - list
    - get
    - watch
- apiGroups:
    - apps
  resources:
    - deployments
  verbs:
    - list
    - get
    - watch
- apiGroups:
    - krules.dev
  resources:
    - configurationproviders
  verbs:
    - list
    - get
    - watch
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
subjects:
- kind: ServiceAccount
  name: {{ app_name }}
  namespace: {{ namespace }}
roleRef:
  kind: Role
  name: {{ app_name }}
  apiGroup: rbac.authorization.k8s.io
---