apiVersion: sources.knative.dev/v1
kind: ContainerSource
metadata:
  name: heartbeats
  namespace: {{ namespace }}
spec:
  template:
    spec:
      containers:
        - image: gcr.io/airspot/heartbeats
          name: heartbeats
          args:
            - --period=10
            - --eventType=scheduler.heartbeat
          env:
          - name: POD_NAME
            valueFrom:
              fieldRef:
                fieldPath: metadata.name
          - name: POD_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
  sink:
    ref:
      apiVersion: v1
      kind: Service
      name: {{ app_name }}
