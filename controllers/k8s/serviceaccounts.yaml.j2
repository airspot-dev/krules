apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ svc_acc_name }}
  namespace: {{ namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ svc_acc_name }}
rules:
- apiGroups: ["eventing.knative.dev",]
  resources:
    - brokers
  verbs:
    - list
    - get
    - create
- apiGroups: ["krules.dev"]
  resources:
   - configurationproviders
   - serviceconfigurationproviders
   - featureconfigurationproviders
  verbs:
  - list
  - get
  - patch
- apiGroups: [""]
  resources:
    - configmaps
  verbs:
    - list
    - get
    - create
    - delete
    - patch
- apiGroups:
    - apps
  resources:
    - deployments
  verbs:
    - list
    - get
    - patch
- apiGroups:
    - serving.knative.dev
  resources:
    - services
  verbs:
    - list
    - get
    - patch
- apiGroups: [""]
  resources:
    - events
  verbs:
    - create
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ svc_acc_name }}
subjects:
- kind: ServiceAccount
  name: {{ svc_acc_name }}
  namespace: {{ namespace }}
roleRef:
  kind: ClusterRole
  name: {{ svc_acc_name }}
  apiGroup: rbac.authorization.k8s.io
---

