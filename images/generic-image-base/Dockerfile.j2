{% if extra_index_url %}
FROM python:3.10-slim-bullseye as pkg-build

WORKDIR /packages/
{% if gcp_service_account_path %}
ENV GOOGLE_APPLICATION_CREDENTIALS /service-account.json
COPY ./{{ gcp_service_account_path }}/service-account.json /service-account.json
COPY ./{{ gcp_service_account_path }}/.pypirc /.pypirc
{% endif %}

RUN pip install keyrings.google-artifactregistry-auth
RUN pip download --extra-index-url {{ extra_index_url }} krules-env=={{ release_version }} krules-subjects-storage-redis=={{ release_version }}

{% endif %}

FROM python:3.10-slim-bullseye

ENV VIRTUAL_ENV=/opt/venv
RUN python3 -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

WORKDIR /app
ENV PYTHONPATH /app

RUN pip3 install --upgrade pip setuptools wheel

ADD env.py /app/

{% if extra_index_url %}
WORKDIR /packages
COPY --from=pkg-build /packages/ /packages/
# Installing the packages from the copied files
RUN pip install --no-index --find-links=/packages/ /packages/*
WORKDIR /app
{% else %}
{% if release_version %}
RUN pip3 install --no-cache-dir krules-env=={{ release_version }}
{% else %}

{% for lib in dev_requirements %}
RUN pip3 install {{ lib }} {% if not loop.last %}\{%  endif %}
{% endfor %}

ADD .build/.krules-libs /.krules-libs
RUN cd /.krules-libs/krules-core && pip3 install --upgrade --no-cache-dir .
RUN cd /.krules-libs/krules-dispatcher-cloudevents && pip3 install --upgrade --no-cache-dir .
RUN cd /.krules-libs/krules-env && pip3 install --upgrade --no-cache-dir .
{% endif %}

{% for backend in subjects_backends %}
{% if release_version %}
RUN pip3 install --no-cache-dir krules-subjects-storage-{{ backend }}=={{ release_version }}
{% else %}
ADD .build/.subjects-backends/{{ backend }} /.subjects-backends/{{ backend }}
RUN cd /.subjects-backends/{{ backend }} && python3 setup.py develop
{% endif %}
{% endfor %}
{% endif %}